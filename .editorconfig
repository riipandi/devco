# -*- mode: conf-unix; -*-

root = true

# defaults
[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.{py,py.tpl}]
indent_style = space
indent_size = 4
max_line_length = 119

# 4 space indentation
[*.{ini,md,rst}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# frontend components indentation
[*.{html,css,scss,js,vue}]
indent_style = space
indent_size = 2

# 4-width tabbed indentation
[*.{sh,bat.tpl,Makefile.tpl}]
indent_style = tab
indent_size = 4

# and travis does its own thing
[.travis.yml]
indent_style = space
indent_size = 2

[.eslintrc]
indent_style = space
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore
